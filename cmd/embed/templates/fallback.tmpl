{{define "fallback"}}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{{ .Page.Title }} - Missing Template</title>

        {{ template "err_style" . }}
    </head>
    <body>
        <div class="wrap">
            <div class="banner" role="status" aria-live="polite">
                <div class="k">fallback template</div>
                <div class="msg">
                    {{- if .Meta.Template -}} template
                    <code>{{ .Meta.Template }}</code> not found {{- else -}} no
                    template specified {{- end -}}
                </div>
            </div>

            <section class="panel">
                <div class="panel-h">
                    <div>metadata</div>
                    <div class="right">
                        {{- if not .Page.Date.IsZero -}} {{ .Page.Date.Format
                        "2006-01-02" }} {{- else -}} undated {{- end -}}
                    </div>
                </div>

                <dl class="meta">
                    <dt>source</dt>
                    <dd>{{ .Meta.Source }}</dd>

                    <dt>target</dt>
                    <dd>{{ .Meta.Target }}</dd>

                    <dt>template</dt>
                    <dd>
                        {{ if .Meta.Template }}{{ .Meta.Template }}{{ else }}<em
                            >(not specified)</em
                        >{{ end }}
                    </dd>

                    {{- if .Page.Title}}
                    <dt>title</dt>
                    <dd>{{ .Page.Title }}</dd>
                    {{- end }}{{- if .Page.Slug }}
                    <dt>slug</dt>
                    <dd>{{ .Page.Slug }}</dd>
                    {{- end }} {{- if .Page.Section }}
                    <dt>section</dt>
                    <dd>{{ .Page.Section }}</dd>
                    {{- end }} {{- if not .Page.Date.IsZero }}
                    <dt>date</dt>
                    <dd>{{ .Page.Date.Format "2006-01-02 15:04:05" }}</dd>
                    {{- end }} {{- if not .Page.Updated.IsZero }}
                    <dt>updated</dt>
                    <dd>{{ .Page.Updated.Format "2006-01-02 15:04:05" }}</dd>
                    {{- end }} {{- if .Page.Description }}
                    <dt>desc</dt>
                    <dd>{{ .Page.Description }}</dd>
                    {{- end }} {{- if .Page.Draft }}
                    <dt>draft</dt>
                    <dd>true</dd>
                    {{- end }} {{- if .Page.Featured }}
                    <dt>featured</dt>
                    <dd>true</dd>
                    {{- end }}
                </dl>

                {{- if .Page.Tags }}
                <div class="tags" aria-label="tags">
                    {{- range .Page.Tags }}
                    <span class="tag">{{ . }}</span>
                    {{- end }}
                </div>
                {{- end }}
            </section>

            <section class="panel">
                <div class="panel-h">
                    <div>content preview</div>
                    <div class="right">body</div>
                </div>

                <div class="preview">{{ .Page.Body }}</div>
            </section>
        </div>
    </body>
</html>
{{end}}
